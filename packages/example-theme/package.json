{
  "version": "1.0.0-alpha.1",
  "author": "Community for NL Design System",
  "description": "NL Design System design tokens for Gemeente Rotterdam",
  "website": "https://www.nldesignsystem.nl/",
  "keywords": [
    "nl-design-system"
  ],
  "license": "EUPL-1.2",
  "name": "@nl-design-system-unstable/example-theme",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git+ssh",
    "url": "git@github.com:nl-design-system/themes.git"
  },
  "scripts": {
    "clean": "rimraf -rf dist/ src/figma-tokens.tokens.json",
    "prebuild": "npm run clean",
    "watch": "npm-run-all watch:**",
    "watch:style-dictionary": "chokidar --follow-symlinks --command 'npm run --ignore-scripts build' 'src/**/*.tokens.json'",
    "build-figma-tokens": "token-transformer --throwErrorWhenNotResolved=true figma/*.tokens.json src/generated/figma.tokens.json",
    "build": "npm-run-all build:**",
    "build:scss": "sass --no-source-map src/:dist/",
    "prebuild:style-dictionary": "npm run build-figma-tokens",
    "build:style-dictionary": "style-dictionary build --config ./style-dictionary.config.js"
  },
  "devDependencies": {
    "@fontsource/open-sans": "4.5.12",
    "chokidar-cli": "3.0.0",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "style-dictionary": "3.7.1",
    "token-transformer": "0.0.27"
  }
}
