{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "outDir": "./dist/",
    "rootDir": "./src/",
    "skipLibCheck": true
  },
  "extends": "../../tsconfig.json",
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["**/node_modules/*"]
}
