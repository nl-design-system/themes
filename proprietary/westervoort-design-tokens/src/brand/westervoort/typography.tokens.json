{
  "westervoort": {
    "typography": {
      "sans-serif": {
        "font-family": {
          "$value": "\"Source Sans Pro\", \"Arial\", \"Helvetica\", \"Verdana\", sans-serif"
        }
      },
      "scale": {
        "md": {
          "font-size": {
            "$value": "18px"
          },
          "line-height": {
            "$value": "1.35"
          }
        },
        "sm": {
          "font-size": {
            "$value": "16px"
          },
          "line-height": {
            "$value": "18px"
          }
        }
      },
      "weight-scale": {
        "bold": {
          "font-weight": {
            "$value": "700"
          }
        },
        "semi-bold": {
          "font-weight": {
            "$value": "500"
          }
        },
        "normal": {
          "font-weight": {
            "$value": "400"
          }
        }
      }
    }
  }
}
